    "autoprefixer": "10.4.14",
    "eslint": "8.46.0",
    "eslint-config-next": "13.4.12",
    "husky": "^8.0.3",
    "next": "13.4.12",
    "postcss": "8.4.27",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "tailwindcss": "3.3.3"
  },
  "lint-staged": {
    "src/**/*.{js,ts,tsx,json}": [
      "prettier --write"
    ],
    "src/**/*.{js,ts,tsx}": [
      "eslint --fix"
    ]
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.2.3",
